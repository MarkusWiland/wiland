{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["n", "prettier"],
  "rules": {
    "prefer-arrow-callback": ["error"],
    "prefer-template": ["error"],
    "semi": ["error"],
    "quotes": ["error", "double"],
    "n/no-process-env": ["error"],
    "prettier/prettier": ["error"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  }
}
